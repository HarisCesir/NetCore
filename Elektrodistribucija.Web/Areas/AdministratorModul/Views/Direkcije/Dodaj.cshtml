@using Elektrodistribucija.Data.Models
@using Elektrodistribucija.Web.Areas.AdministratorModul.ViewModels
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
    List<Grad> gradovi = (List<Grad>)ViewData["gradovi"];
}
@model DirekcijeVM
<h2>Dodaj direkciju</h2>

<div class="container">
    <form asp-action="Snimi" asp-controller="Direkcije">
        <div class="row ">
            <div class="col col-lg-6">
                <div class="form-group">
                    <label> Adresa</label>
                    <div>
                        <input asp-for="Adresa" class="form-control" />
                        <span asp-validation-for="Adresa" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Grad</label>

                    <select asp-for="GradID" class="form-control">
                        <option>Odaberite grad</option>
                        @foreach (Grad g in gradovi)
        {
                <option value="@g.Id">@g.Naziv</option>

}
                    </select>
                    <a asp-action="DodajGrad" ajax-poziv="da" ajax-rezultat="DodajDiv"  class="btn btn-primary">Dodaj grad</a>

                    <span asp-validation-for="GradID" class="text-danger text-uppercase"></span>

                    <div id="DodajDiv">

                    </div>
                </div>

                <input class="btn btn-primary btn-block" type="submit" value="Snimi" />
            </div>
        </div>
    </form>

    </div>