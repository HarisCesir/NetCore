@model Elektrodistribucija.Web.Areas.ReferentZaKlijenteModul.ViewModels.OpomenaVM

@using Elektrodistribucija.Data.Models;

<form asp-action="SnimiOpomenu" ajax-poziv="ne">

    <div class="form-group">
        <label asp-for="Datum"></label>
        <input asp-for="Datum" type="date" class="form-control" />
        <span asp-validation-for="Datum" class="text-danger">

        </span>
    </div>
    <div class="form-group">
        <label asp-for="Sadrzaj"></label>
        <textarea asp-for="Sadrzaj" class="form-control"></textarea>
        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
    </div>
    <input asp-for="PrikljucakID" value="@Model.PrikljucakID" type="hidden" />
    <input id="snimi" class=" btn btn-primary" type="submit" value="Snimi" />
</form>
